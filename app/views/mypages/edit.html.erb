<div class="container">
  <div class="row">
    <div class="col-11 col-lg-5 jumbotron mx-auto mt-4" style="box-shadow: 0 0 5px 5px rgba(0, 0, 0, 0.2)">
      <%= form_with(model: @user,url:"/mypages/#{current_user.id}",local: true ,method: :put) do |f| %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      <% end %>
    </div>
  </div>
</div>